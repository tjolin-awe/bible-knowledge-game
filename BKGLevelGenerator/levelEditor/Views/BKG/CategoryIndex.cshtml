@model IEnumerable<levelEditor.Models.BKG.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Manage.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="CategoryCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="EditCategory" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="CategoryDetails" asp-route-id="@item.Id">Details</a> |
                <a asp-action="DeleteCategory" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
